<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUp">

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E6E6E6"
        android:onClick="goBackClick"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="&lt;"
        android:textColor="#000000"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Регистрация"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Заполните Свои Данные  Или Продолжите Через Социальные Медиа"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ваше имя"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/nameSingUp"
        app:layout_constraintEnd_toEndOf="@+id/nameSingUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameSingUp" />

    <EditText
        android:id="@+id/nameSingUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-20dp"
        android:ems="10"
        android:hint="xxxxxxxx"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/emailSingUp"
        app:layout_constraintEnd_toEndOf="@+id/emailSingUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailSingUp" />

    <EditText
        android:id="@+id/emailSingUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-20dp"
        android:ems="10"
        android:hint="xyz@mail.ru"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/nameSingUp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Password"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordSingUp"
        app:layout_constraintEnd_toEndOf="@+id/passwordSingUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordSingUp" />

    <EditText
        android:id="@+id/passwordSingUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/emailSingUp"
        app:layout_constraintStart_toStartOf="@+id/emailSingUp"
        app:layout_constraintTop_toBottomOf="@+id/emailSingUp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="seePassword"
        android:src="@drawable/show_password"
        app:layout_constraintBottom_toBottomOf="@+id/passwordSingUp"
        app:layout_constraintEnd_toEndOf="@+id/passwordSingUp"
        app:layout_constraintTop_toTopOf="@+id/passwordSingUp" />

    <Button
        android:id="@+id/singUpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1897E0"
        android:onClick="singUpClick"
        android:text="Зарегистрироваться"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/passwordSingUp"
        app:layout_constraintTop_toBottomOf="@+id/personalDataSingUpCheck" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Есть аккаунт?"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/singInUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:onClick="singInClick"
        android:text="Войти"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <CheckBox
        android:id="@+id/personalDataSingUpCheck"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Даю согласие на обработку персональных данных"
        app:layout_constraintStart_toStartOf="@+id/passwordSingUp"
        app:layout_constraintTop_toBottomOf="@+id/passwordSingUp" />
</androidx.constraintlayout.widget.ConstraintLayout>