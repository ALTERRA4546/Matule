<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1897E0">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Никита Хохрин"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <Button
            android:id="@+id/userProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Профиль"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/userProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Корзина"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/userProfile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Избранное"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/userProfile4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Заказы"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/userProfile5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Уведомления"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/userProfile6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1897E0"
            android:text="Настройки"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/userProfile7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1897E0"
            android:text="Выйти"
            android:textAlignment="textStart"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginEnd="-90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/user_side_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>