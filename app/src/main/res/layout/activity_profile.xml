<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <Button
        android:id="@+id/singInButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#1897E0"
        android:onClick="saveButton"
        android:text="Сохранить"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordProfileEdit"
        app:layout_constraintStart_toStartOf="@+id/userPasswordProfileEdit"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordProfileEdit" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/userEmailProfileEdit"
        app:layout_constraintEnd_toEndOf="@+id/userEmailProfileEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userEmailProfileEdit" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Пароль"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/userPasswordProfileEdit"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordProfileEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userPasswordProfileEdit" />

    <EditText
        android:id="@+id/userPasswordProfileEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:enabled="false"
        android:hint="*******"
        android:inputType="text|textPassword"
        app:layout_constraintEnd_toEndOf="@+id/userEmailProfileEdit"
        app:layout_constraintStart_toStartOf="@+id/userEmailProfileEdit"
        app:layout_constraintTop_toBottomOf="@+id/userEmailProfileEdit" />

    <EditText
        android:id="@+id/userEmailProfileEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="xyz@mail.ru"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/userNameProfileEdit"
        app:layout_constraintStart_toStartOf="@+id/userNameProfileEdit"
        app:layout_constraintTop_toBottomOf="@+id/userNameProfileEdit" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E6E6E6"
        android:onClick="backButton"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="&lt;"
        android:textColor="#000000"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userPhotoProfileEdit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Профиль"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ваше имя"
        android:textColor="#3C3C3C"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/userNameProfileEdit"
        app:layout_constraintEnd_toEndOf="@+id/userNameProfileEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userNameProfileEdit" />

    <EditText
        android:id="@+id/userNameProfileEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Иванов Иван Иванович"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhotoProfileEdit" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="forgotPassword"
        android:text="Восстановить пароль"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordProfileEdit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userPasswordProfileEdit"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordProfileEdit" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/userPhotoProfileEdit"
        app:layout_constraintEnd_toEndOf="@+id/userPhotoProfileEdit"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>